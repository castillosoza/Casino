drop database casino; 

create database casino;

use casino;

CREATE TABLE CATEGORIA
(
	ID_CATEGORIA INT 			PRIMARY KEY ,
	CAT_NOMBRE   VARCHAR(100) 	NOT NULL,
	CAT_ACTIVO 	 BIT			NOT NULL
);

CREATE TABLE MARCA
(
	ID_MARCA    INT 			PRIMARY KEY,
	MAR_NOMBRE 	VARCHAR(100)	NOT NULL,
	MAR_ACTIVO	BIT 			NOT NULL 
);

CREATE TABLE PRODUCTO
(
	ID_PRODUCTO 	  INT PRIMARY KEY,
	ID_MARCA          INT NULL,
	ID_CATEGORIA      INT NOT NULL, 
	PRO_NOMBRE		  VARCHAR(100) NOT NULL, 
	PRO_PRECIOVENTA   INT NOT NULL, 
	PRO_STOCK         INT NOT NULL
);

ALTER TABLE PRODUCTO ADD FOREIGN KEY (ID_MARCA)
REFERENCES MARCA(ID_MARCA);

ALTER TABLE PRODUCTO ADD FOREIGN KEY (ID_CATEGORIA)
REFERENCES CATEGORIA(ID_CATEGORIA);

